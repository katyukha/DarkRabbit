<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dark_rabbit_handler_tree" model="ir.ui.view">
        <field name="model">dark.rabbit.handler</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="model_id"/>
                <field name="method_name"/>
            </list>
        </field>
    </record>

    <record id="view_dark_rabbit_handler_form" model="ir.ui.view">
        <field name="model">dark.rabbit.handler</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <field name="name" nolabel="1" placeholder="Handler name..."/>
                    </div>
                    <group>
                        <group name="group_handler_info" string="Handler Info">
                            <field name="model_id"/>
                            <field name="method_name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dark_rabbit_handler_list" model="ir.actions.act_window">
        <field name="name">Dark Rabbit Handler</field>
        <field name="res_model">dark.rabbit.handler</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem action="action_dark_rabbit_handler_list"
              id="menu_dark_rabbit_handler"
              sequence="10"
              parent="dark_rabbit.menu_dark_rabbit_root"/>

</odoo>
