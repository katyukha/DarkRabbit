<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dark_rabbit_outgoing_routing_list" model="ir.ui.view">
        <field name="model">dark.rabbit.outgoing.routing</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code" optional="False"/>
                <field name="connection_id"/>
                <field name="outgoing_event_type_id"/>
                <field name="exchange"/>
                <field name="routing_key"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_dark_rabbit_outgoing_routing_form" model="ir.ui.view">
        <field name="model">dark.rabbit.outgoing.routing</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived"
                            bg_color="bg-danger"
                            invisible="active == True" />
                    <div class="oe_title">
                        <field name="name" nolabel="1" placeholder="Routing name..."/>
                        <field name="code" nolabel="1" placeholder="Routing code..."/>
                    </div>
                    <group>
                        <group>
                            <field name="connection_id"/>
                            <field name="outgoing_event_type_id"/>
                        </group>
                        <group>
                            <field name="exchange"/>
                            <field name="routing_key"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<record id="action_dark_rabbit_outgoing_routing_list" model="ir.actions.act_window">
        <field name="name">Dark Rabbit Outgoing Routing</field>
        <field name="res_model">dark.rabbit.outgoing.routing</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem action="action_dark_rabbit_outgoing_routing_list"
              id="menu_dark_rabbit_outgoing_routing"
              sequence="10"
              parent="dark_rabbit.menu_dark_rabbit_root"/>

</odoo>
