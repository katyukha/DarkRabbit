<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dark_rabbit_event_tree" model="ir.ui.view">
        <field name="model">dark.rabbit.event</field>
        <field name="arch" type="xml">
            <list>
                <field name="create_date"/>
                <field name="connection_id"/>
                <field name="queue_id"/>
                <field name="routing_key"/>
                <field name="error"/>
            </list>
        </field>
    </record>

    <record id="view_dark_rabbit_event_form" model="ir.ui.view">
        <field name="model">dark.rabbit.event</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_retry_handle"
                            type="object"
                            string="Retry handle"
                            class="oe_highlight"
                            icon="fa-refresh"
                            invisible="not error"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <group>
                        <group>
                            <field name="connection_id"/>
                            <field name="queue_id"/>
                            <field name="handler_id"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="routing_key"/>
                        </group>
                        <group colspan="2" string="Body">
                            <field name="body" nolabel="1" colspan="2" invisible="body_json_pretty"/>
                            <field name="body_json_pretty" nolabel="1" colspan="2" invisible="not body_json_pretty" widget="code" options="{'mode': 'javascript'}"/>
                        </group>
                        <group colspan="2" string="Error info" invisible="not error">
                            <field name="error"/>
                            <field name="error_msg" nolabel="1" colspan="2"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dark_rabbit_event_search" model="ir.ui.view">
        <field name="model">dark.rabbit.event</field>
        <field name="arch" type="xml">
            <search>
                <field name="create_date"/>
                <field name="routing_key"/>
                <field name="connection_id" />
                <field name="queue_id"/>
                <field name="handler_id"/>

                <filter name="filter_with_error"
                        string="Error"
                        domain="[('error', '=', True)]"/>
                <filter name="filter_without_error"
                        string="No error"
                        domain="[('error', '=', False)]"/>
                <separator/>
                <filter name="filter_with_handler"
                        string="With handler"
                        domain="[('handler_id', '!=', False)]"/>
                <filter name="filter_without_handler"
                        string="Without handler"
                        domain="[('handler_id', '=', False)]"/>
                <separator/>

                <group expand="1" string="Group By">
                    <filter
                        string="Date"
                        name="group_by_create_date"
                        context="{'group_by':'create_date'}"
                    />
                    <filter
                        string="Connection"
                        name="group_by_connection_id"
                        context="{'group_by':'connection_id'}"
                    />
                    <filter
                        string="Queue"
                        name="group_by_queue_id"
                        context="{'group_by':'queue_id'}"
                    />
                    <filter
                        string="Handler"
                        name="group_by_handler_id"
                        context="{'group_by':'handler_id'}"
                    />
                    <filter
                        string="Error"
                        name="group_by_error"
                        context="{'group_by':'error'}"
                    />
                </group>

                <searchpanel view_types="list,pivot,graph">
                    <field name="connection_id" string="Connection" select="multi"/>
                    <field name="queue_id" string="Queue" select="multi"/>
                    <field name="handler_id" string="Queue" select="multi"/>
                </searchpanel>
            </search>
        </field>
    </record>
    <record id="action_dark_rabbit_event_list" model="ir.actions.act_window">
        <field name="name">Dark Rabbit Event</field>
        <field name="res_model">dark.rabbit.event</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem action="action_dark_rabbit_event_list"
              id="menu_dark_rabbit_event"
              sequence="30"
              parent="dark_rabbit.menu_dark_rabbit_root"/>

</odoo>
