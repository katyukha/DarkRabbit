<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_test_dark_rabbit_handler_tree" model="ir.ui.view">
        <field name="model">test.dark.rabbit.handler</field>
        <field name="arch" type="xml">
            <list>
                <field name="create_date"/>
                <field name="body"/>
            </list>
        </field>
    </record>

    <record id="view_test_dark_rabbit_handler_form" model="ir.ui.view">
        <field name="model">test.dark.rabbit.handler</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                    <field name="create_date"/>
                    </group>
                    <group>
                        <field name="body"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dark_rabbit_handler_list" model="ir.actions.act_window">
        <field name="name">Test Dark Rabbit Hander</field>
        <field name="res_model">test.dark.rabbit.handler</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem name="Dark Rabbit Tests"
              id="menu_dark_rabbit_tests"
              sequence="50"
              parent="base.menu_tests"/>

    <menuitem name="Dark Rabbit: Test Handler"
              id="menu_dark_rabbit_tests_handler"
              sequence="30"
              parent="menu_dark_rabbit_tests"
              action="action_dark_rabbit_handler_list"/>

</odoo>
