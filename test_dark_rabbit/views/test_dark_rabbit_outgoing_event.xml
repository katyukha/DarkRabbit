<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_test_dark_rabbit_outgoing_event_list" model="ir.ui.view">
        <field name="model">test.dark.rabbit.outgoing.event</field>
        <field name="arch" type="xml">
            <list>
                <field name="body"/>
            </list>
        </field>
    </record>

    <record id="view_test_dark_rabbit_outgoing_event_form" model="ir.ui.view">
        <field name="model">test.dark.rabbit.outgoing.event</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                    <field name="body"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dark_rabbit_outgoing_event_list" model="ir.actions.act_window">
        <field name="name">Test Dark Rabbit Outgoing Event</field>
        <field name="res_model">test.dark.rabbit.outgoing.event</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem name="Dark Rabbit: Test Outgoing Events"
              id="menu_dark_rabbit_tests_ougoing_event"
              sequence="20"
              parent="menu_dark_rabbit_tests"
              action="action_dark_rabbit_outgoing_event_list"/>

</odoo>
